@using BookShopWithAuthen.Model.Models;
@model Dictionary<string, IEnumerable<BookShopWithAuthen.Model.Models.Book>>
  

<section id="intro">
    <div class="intro-container">
        <div id="introCarousel" class="carousel slide carousel-fade" data-ride="carousel">

            <ol class="carousel-indicators"></ol>

            <div class="carousel-inner" role="listbox">

                <div class="carousel-item active">
                    <div class="carousel-background"><img src="~/Content/FrontEndRef/img/intro-carousel/1.jpg" alt=""></div>
                    <div class="carousel-container">
                        <div class="carousel-content">
                            <h2>Chúng tôi chuyên nghiệp</h2>
                            <p>Luôn đảm bảo thời gian giao hàng, chất lượng sách và sẵn sàng tiếp thu mọi ý kiến đóng góp của khách hàng</p>
                            <a href="@Url.Action("Index","Categories")" class="btn-get-started scrollto">Khám phá ngay</a>
                        </div>
                    </div>
                </div>

                <div class="carousel-item">
                    <div class="carousel-background"><img src="/Content/FrontEndRef/img/intro-carousel/2.jpg" alt=""></div>
                    <div class="carousel-container">
                        <div class="carousel-content">
                            <h2>Chúng tôi uy tín</h2>
                            <p>Sẵn sàng hoàn tiền 100% nếu xảy ra bất kì sai sót trong quá trình nhận đơn hàng và giao đơn hàng </p>
                            <a href="@Url.Action("Index","Categories")" class="btn-get-started scrollto">Khám phá ngay</a>
                        </div>
                    </div>
                </div>

                <div class="carousel-item">
                    <div class="carousel-background"><img src="/Content/FrontEndRef/img/intro-carousel/3.jpg" alt=""></div>
                    <div class="carousel-container">
                        <div class="carousel-content">
                            <h2>Chúng tôi yêu bạn</h2>
                            <p>Chúng tôi sẵn sàng tư vấn nhiệt tình, hết mình chỉ để làm bạn vui </p>
                            <a href="@Url.Action("Index","Categories")" class="btn-get-started scrollto">Khám phá ngay</a>
                        </div>
                    </div>
                </div>



            </div>

            <a class="carousel-control-prev" href="#introCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon ion-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>

            <a class="carousel-control-next" href="#introCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon ion-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>

        </div>
    </div>
</section>
@foreach (KeyValuePair<string, IEnumerable<Book>> item in Model)
{
    <section class="mt-4 py-5" style="background-color: #FFF0F0;">
        <h4 class="text-center font-weight-bold custom-text-color"><i class="fa fa-heart mr-2"></i>@item.Key BÁN CHẠY</h4>
        <div class="container" style="color: black">
            <div class="row">
                <!-- owl-theme -->
                <div class="carousel-bestseller-books owl-carousel owl-theme" id="id_carousel_@item.Key">
                    @foreach (Book book in item.Value)
                    {
                        <div class="card">
                            <a href="/Books?id=@book.ID"><img class="card-img-top" src="~/Image/@book.Image" alt="Card image cap"></a>
                            <div class="card-body">
                                <h6 class="header-info-bestseller">@book.Name</h6>
                                <div class="star-rating" style="margin-top: -10px">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                                <p class="bestseller-price">@book.Price.000d</p>
                            </div>
                        </div>
                    }
                </div>
                
            </div>
        </div>
    </section>

}

